{
  "num_episodes": 100000,
  "learning_rate": 0.001,
  "gamma": 0.99,
  "epsilon_start": 1.0,
  "epsilon_min": 0.01,
  "epsilon_decay": 0.999,
  "replay_memory_size": 10000,
  "batch_size": 64,
  "target_update": 10,
  "save_interval": 2000,
  "model_path": "models/c4_model.pth",
  "gradient_clip": 1.0,
  "weight_decay": 1e-5,
  "eval_interval": 2000,
  "eval_games": 100,
  "warmup_episodes": 1000,
  "learning_rate_schedule": {
    "enabled": true,
    "patience": 200,
    "factor": 0.8,
    "min_lr": 1e-6
  },
  "early_stopping": {
    "enabled": false,
    "patience": 5000,
    "min_delta": 0.01
  },
  "logging": {
    "enabled": true,
    "log_file": "connect4_training.log",
    "log_level": "INFO"
  },
  "checkpointing": {
    "enabled": true,
    "checkpoint_dir": "connect4_checkpoints",
    "keep_best": true,
    "metric": "win_rate"
  },
  "visualization": {
    "plot_training": false,
    "save_plots": false,
    "plot_dir": "plots"
  },
  "use_advanced_tactics": true
}